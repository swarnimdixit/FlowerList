<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ListView
        android:id="@+id/list_ListView_Fragment"
        android:layout_width="254dp"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        android:layout_gravity="left">
    </ListView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rightpane_landscape_listview">

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="78dp"
            android:id="@+id/labelTextView"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp" />

        <ImageView
            android:id="@+id/Image_frag"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DefaultTextView"
            android:textSize="18sp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/Image_frag"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/DefaultTextView"
            android:layout_marginTop="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/DescriptionScrollView"
            android:scrollbarStyle="insideOverlay"
            android:fillViewport="false"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/DescriptionTextView"
                android:layout_height="100dp"
                android:textSize="24sp"
                android:singleLine="false"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">

            </TextView>
        </ScrollView>


    </RelativeLayout>


</LinearLayout>