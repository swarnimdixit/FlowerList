<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swarnim_d.flowerlist.ItemDetailFragment">


    <TextView
        android:text="Flower Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/labelTextView"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/Image_frag"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_below="@+id/labelTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
         />

    <TextView
        android:text="Description:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/DefaultTextView"
        android:textSize="18sp"
        android:layout_below="@+id/Image_frag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/background_dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/DefaultTextView"
        android:layout_marginTop="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/DescriptionScrollView"
        android:scrollbarStyle="insideOverlay"
        android:fillViewport="false"
        android:clipToPadding="false">

        <TextView android:id="@+id/DescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="flowers are those flowers are that what flower are flowers are this flowers are those flowers are that what flower are flowers are this flowers are those flowers are that what flower are flowers are this"
            android:textSize="24sp"
            android:singleLine="false">

        </TextView>
    </ScrollView>

</RelativeLayout>
